@{
}
@model List<string>

@{
    ViewData["Title"] = "Download Files from Blob";
}

<h2>Available Files</h2>

@if (Model != null && Model.Any())
{
    <ul class="list-group">
        @foreach (var fileName in Model)
        {
            <li class="list-group-item">
                <a asp-action="DownloadBlob" asp-route-fileName="@fileName">
                    @fileName
                </a>
            </li>
        }
    </ul>
}
else
{
    <p>No files found in blob storage.</p>
}